<h1>つぶやき一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>つぶやき</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
　　 <td><%= link_to '詳細を確認', post_path(post.id) %></td>
    <td><%= link_to "つぶやきを編集", edit_post_path(post.id) %></td>
    <td><%= link_to 'つぶやきを削除', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '新規投稿', new_post_path %>
